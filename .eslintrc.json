{
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always", { "omitLastInOneLineBlock": false }],
    "no-multi-spaces": ["off"],
    "key-spacing": ["off"],
    "no-trailing-spaces": "off",
    "no-multiple-empty-lines" : "off",
    "eol-last": "off",
    "padded-blocks": "off",
    "object-curly-spacing": "off"
  },
  "globals": {
    "game": false,
    "dt": true
  }
}
