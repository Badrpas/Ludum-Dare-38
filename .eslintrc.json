{
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always", { "omitLastInOneLineBlock": false }],
    "no-multi-spaces": ["off"],
    "key-spacing": ["off"],
    "no-trailing-spaces": "off"
  },
  "globals": {
    "game": false
  }
}
